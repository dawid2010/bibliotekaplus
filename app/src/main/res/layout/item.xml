<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/custom_layout">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/propellantTextView3"
            android:layout_width="181dp"

            android:layout_height="wrap_content"
            android:layout_below="@+id/spacecraftImageView"
            android:layout_alignBottom="@+id/spacecraftImageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="-309dp"
            android:layout_marginTop="149dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="-184dp"
            android:layout_toRightOf="@+id/spacecraftImageView"
            android:gravity="center"
            android:padding="5dp"
            android:text="Propellant"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"
            tools:textColor="@android:color/holo_orange_light" />

        <TextView
            android:id="@+id/propellantTextView2"
            android:layout_width="181dp"

            android:layout_height="wrap_content"
            android:layout_below="@+id/spacecraftImageView"
            android:layout_alignBottom="@+id/spacecraftImageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="-309dp"
            android:layout_marginTop="111dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="-146dp"
            android:layout_toRightOf="@+id/spacecraftImageView"
            android:gravity="center"
            android:padding="5dp"
            android:text="Propellant"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/spacecraftImageView"
            android:layout_width="260dp"
            android:layout_height="291dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="143dp"
            android:layout_above="@+id/propellantTextView"
            android:layout_below="@+id/spacecraftImageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="-310dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="-73dp"
            android:layout_toRightOf="@+id/spacecraftImageView"
            android:gravity="center"
            android:padding="5dp"
            android:text="Spacecraft Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/propellantTextView"
            android:layout_width="181dp"

            android:layout_height="wrap_content"
            android:layout_below="@+id/spacecraftImageView"
            android:layout_alignBottom="@+id/spacecraftImageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="-309dp"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="-109dp"
            android:layout_toRightOf="@+id/spacecraftImageView"
            android:gravity="center"
            android:padding="5dp"
            android:text="Propellant"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:textColor="@color/colorPrimary" />

        <CheckBox
            android:id="@+id/myCheckBox"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="93dp"
            android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:text="Czy wymagana jest kaucja?"
            android:textColor="@color/windowBackground" />

    </RelativeLayout>

    <View
        android:id="@+id/item_swipe_left_indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:alpha="0"
        android:background="#A5F" />

    <View
        android:id="@+id/item_swipe_right_indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:alpha="0"
        android:background="#5AF" />

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tlo">

        <TextView
            android:id="@+id/edTextliczba"
            android:layout_width="93dp"
            android:layout_height="43dp"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/textKod"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/propellantTextView3"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPlacowka"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/spacecraftImageView"
            android:padding="5dp"
            android:text="Propellant"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textPlacowka"
            android:layout_width="249dp"
            android:layout_height="36dp"
            android:layout_below="@+id/rejdata"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/spacecraftImageView"
            android:padding="5dp"
            android:text="Propellant"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/spacecraftImageView"
            android:layout_width="120dp"
            android:layout_height="136dp"
            android:layout_below="@+id/edTextliczba"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/textKod"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/spacecraftImageView"
            android:padding="5dp"
            android:text="Spacecraft Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/rejdata"
            android:layout_width="249dp"
            android:layout_height="32dp"
            android:layout_below="@+id/textKod"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/spacecraftImageView"
            android:padding="5dp"
            android:text="Propellant"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic" />

        <CheckBox
            android:id="@+id/myCheckBox"
            android:layout_width="250dp"
            android:layout_height="34dp"
            android:layout_below="@+id/propellantTextView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/spacecraftImageView"
            android:text="Czy wymagana kaucja" />

    </RelativeLayout>
</android.support.v7.widget.CardView>